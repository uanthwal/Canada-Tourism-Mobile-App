<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/lv_r_l_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/place_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_below="@+id/place_img"
            android:id="@+id/place_name"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Place Name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/place_name"
            android:justificationMode="inter_word"
            android:id="@+id/place_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here Place desc goes here "
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lv_r_l_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lv_r_l_1">

        <Button
            android:id="@+id/book_btn"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="BOOK"></Button>
    </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/lv_r_l_2"
            android:background="#000" />
</RelativeLayout>